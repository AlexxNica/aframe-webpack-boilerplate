{
  "name": "aframe-webpack-boilerplate",
  "version": "1.0.0",
  "description": "A-Frame Starter Kit of WebVR with Webpack2 and SASS",
  "author": "Marko Kungla <marko.kungla@gmail.com> (https://github.com/mkungla)",
  "main": "src/js/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mkungla/aframe-webpack-boilerplate.git"
  },
  "keywords": [
    "aframe",
    "aframe-boilerplate",
    "webpack2",
    "webpack",
    "es6",
    "babel",
    "sass",
    "sass boilerplate",
    "mocha",
    "chai",
    "istanbul"
  ],
  "scripts": {
    "babel": "babel-node --presets es2015",
    "clean": "npm-run-all clean:*",
    "clean:dist": "rimraf dist/* !dist/.gitignore",
    "clean:tmp": "rimraf tmp/* !tmp/.gitignore",
    "clean:coverage": "rimraf devel/coverage/* !devel/coverage/.gitignore",
    "clean:npm": "rimraf npm-debug.log",
    "precoverage": "yarn run vendor:perf",
    "coverage": "npm-run-all --parallel coverage:run --serial coverage:check",
    "coverage:run": "babel-node ./node_modules/.bin/istanbul cover --root ./src --config ./config/istanbul.yaml yarn run test:ci",
    "coverage:check": "istanbul check-coverage --root ./devel/coverage",
    "lint": "npm-run-all lint:*",
    "lint:stylelint": "stylelint './src/sass/**/*.scss' --syntax scss --config ./config/stylelint.json",
    "lint:semistandard": "eslint --no-eslintrc --ignore-path ./config/eslintignore.txt --config ./config/eslint.json ./src",
    "pretest": "yarn run clean:coverage",
    "test": "NODE_ENV=test babel-node ./node_modules/karma/bin/karma start ./config/karma.conf.babel.js",
    "test:ci": "yarn run test -- --single-run --browsers Firefox",
    "test:watch": "yarn run test -- --watch",
    "test:grep": "yarn run test -- --watch --grep $pattern",
    "precommit": "yarn run verify",
    "verify": "npm-run-all lint test:ci",
    "vendor:perf": "webpack --config ./config/webpack-perf.js",
    "prebuild": "npm-run-all clean:dist vendor:perf",
    "build": "webpack --config ./config/webpack.config.babel.js --env.devel --progress",
    "start": "NODE_ENV=test npm-run-all build dev",
    "dev": "babel-node devel --env.devel --hot --port 9000"
  },
  "dependencies": {
    "aframe": "^0.6.1",
    "babel-polyfill": "^6.23.0",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "body-parser": "^1.17.2",
    "chai": "^4.1.0",
    "chai-shallow-deep-equal": "^1.4.6",
    "chalk": "^2.0.1",
    "compression": "^1.7.0",
    "connect-history-api-fallback": "^1.3.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.3.0",
    "eslint-config-semistandard": "^11.0.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "exports-loader": "^0.6.4",
    "express": "^4.15.3",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "handlebars-loader": "^1.5.0",
    "html-loader": "^0.5.0",
    "html-webpack-plugin": "^2.29.0",
    "husky": "^0.14.3",
    "ignore-styles": "^5.0.1",
    "imports-loader": "^0.7.1",
    "ip": "^1.1.5",
    "istanbul": "^0.4.5",
    "jsdom": "^11.1.0",
    "json-loader": "^0.5.7",
    "karma": "^1.7.0",
    "karma-chai-shallow-deep-equal": "^0.0.4",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-env-preprocessor": "^0.1.1",
    "karma-firefox-launcher": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-remap-istanbul": "^0.6.0",
    "karma-sinon-chai": "^1.3.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.4",
    "mocha": "^3.4.2",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "postcss-load-config": "^1.2.0",
    "postcss-loader": "^2.0.6",
    "precss": "^2.0.0",
    "raw-loader": "^0.5.1",
    "resolve-url-loader": "^2.1.0",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "sinon": "^2.4.1",
    "sinon-chai": "^2.12.0",
    "sourcemap-istanbul-instrumenter-loader": "^0.2.0",
    "style-loader": "^0.18.2",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "url-loader": "^0.5.9",
    "webpack": "^3.4.1",
    "webpack-bundle-size-analyzer": "^2.7.0",
    "webpack-dev-middleware": "^1.11.0",
    "webpack-hot-middleware": "^2.18.2"
  },
  "engineStrict": true,
  "engines": {
    "node": ">= 6"
  },
  "semistandard": {
    "parser": "babel-eslint",
    "ignore": [
      "config/**",
      "devel/**",
      "dist/**",
      "tmp/**",
      "**/vendors/**"
    ]
  },
  "babel": {
    "presets": [
      "latest",
      "stage-0"
    ],
    "env": {
      "test": {},
      "development": {},
      "production": {}
    }
  }
}
